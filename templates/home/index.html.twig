                    <div class="block-button">
                        <a href="{{ asset('file/CV_Matteo_Groult.pdf') }}" download class="btn">Télécharger mon CV</a>
                    </div>
                </div>

                <div class="col-md-4 offset-md-2">
                    <div class="avatar">
                        <img src="{{ asset('img/avatar.jpg') }}" alt="photo de profil" class="img-fluid">
                    </div>
                </div>
            </div>
        </section>

        <section class="last-posts">
            <div class="container-md">
                <div class="last-posts-head">
                    <h2>Articles récents</h2>
                    <a href="{{ path('app_blog_index') }}">Voir tous les articles</a>
                </div>
                <div class="last-posts-grid">
                    {% for article in articles %}
                        <article>
                            <div class="post-title">
                                <h3>{{ article.title }}</h3>
                            </div>
                            <div class="post-meta">
                                <span class="post-date">{{ article.createdAt|date('d M Y') }}</span>
                                <span class="post-categories">{{ article.categories|join(', ') }}</span>
                            </div>
                            <div class="post-content">
                                {{ article.content|slice(0, 120)|raw }}{% if article.content|length > 120 %}... <a href="/blog/{{ article.slug }}">Lire la suite</a>{% endif %}
                            </div>
                        </article>
                    {% endfor %}
                </div>
            </div>
        </section>

        <section class="last-projects">
            <div class="container-md">
                <div class="last-projects-head">
                    <h2>Projets récents</h2>
                </div>
                <div class="last-projects-grid">
                    {% for project in projects %}
                        <article>
                            <div class="project-thumbnail">
                                <a target="_blank" href="{{ project.link }}">
                                    <img src="{{ asset('img/project/' ~ project.thumbnail) }}" alt="project thumbnail" class="img-fluid">
                                </a>
                            </div>
                            <div class="project-content">
                                <div class="project-title">
                                    <h3>{{ project.title }}</h3>
                                </div>
                                <div class="project-meta">
                                    <span class="project-date">{{ project.projectDate|date('Y') }}</span>
                                    <span class="project-tag">{{ project.tags|join(', ') }}</span>
                                </div>
                                <div class="project-description">
                                    {{ project.description|raw }}
                                </div>
                            </div>
                        </article>

                    {% endfor %}
                </div>
            </div>
        </section>
    </main>

{% endblock %}